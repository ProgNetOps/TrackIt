@model ClientCreateViewModel


<div class="glass-pane row p-5">
<section class="content-container">

        <article>
            <form method="post" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row col-md-10 m-2">
                    <label asp-for="ClientName" class="col-sm-5 col-form-label"></label>
                    <div class="col-sm-7">
                        <input asp-for="ClientName" class="form-control" />
                    </div>
                </div>


                <div class="form-group row col-md-10 m-2">
                    <label asp-for="ClientCategoryId" class="col-sm-5 col-form-label"></label>
                    <div class="col-sm-7">
                        <select asp-for="ClientCategoryId" class="form-control" asp-items="ViewBag.ClientCategories">
                            <option selected disabled value="">Select Category</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row text-center m-5">
                    <div class=" col-4 offset-4" style="position:relative;">
                        <button type="submit" class="shinyButton">Create Client</button>
                    </div>
                </div>

            </form>
        </article>


    </section>

    <div class="form-group row text-center m-5">
        <div class=" col-4 offset-4" style="position:relative;">
            <a asp-controller="Circuit" asp-action="CreateService" class="shinyButton">Add New Service</a>
        </div>
    </div>

</div>