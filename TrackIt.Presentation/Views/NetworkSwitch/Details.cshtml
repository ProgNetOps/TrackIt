@model TrackIt.Presentation.Models.DTO.NetworkSwitchDTO

<section style="background-color: transparent;">
    <article class="glass-pane p-3">
        <input asp-for="@Model.Id" hidden />

        <div class="form-group row m-2">
            <label asp-for="SwitchName" class="col-sm-4 col-form-label text-white"></label>
            <div class="col-sm-8">
                <input asp-for="SwitchName" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="ManagementIP" class="col-sm-4 col-form-label text-white"></label>
            <div class="col-sm-8">
                <input asp-for="ManagementIP" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="IPPoP.IPPoPName" class="col-sm-4 col-form-label text-white"></label>
            <div class="col-sm-8">
                <input asp-for="IPPoP.IPPoPName" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="IPPoP.BTS.State.StateName" class="col-sm-4 col-form-label text-white"></label>
            <div class="col-sm-8">
                <input asp-for="IPPoP.BTS.State.StateName" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row m-2">

            <label asp-for="IPPoP.BTS.State.Zone.ZoneName" class="col-sm-4 col-form-label text-white"></label>
            <div class="col-sm-8">
                <input asp-for="IPPoP.BTS.State.Zone.ZoneName" class="form-control" readonly />
            </div>
        </div>


        <div class="form-group row m-2">
            <label asp-for="BackupConfig" class="col-sm-4 col-form-label text-white"></label>
            <div class="col-sm-8">
                <textarea asp-for="BackupConfig" readonly class="form-control" style="height:100vh;"></textarea>
            </div>
        </div>

        <div class="form-group row text-center m-5">
            <div class=" col-4 offset-4" style="position:relative;">
                <a class="shinyButton" asp-controller="NetworkSwitch" asp-action="Index">Back&nbsp;To&nbsp;Switches</a>
            </div>
        </div>

        <hr class="m-4" />
    </article>

    <a asp-controller="NetworkSwitch" asp-action="Edit" asp-route-id="@Model.Id" class="fixed-button" style="font-size:calc(1.5rem + 2vw)">
        <i class="bi bi-pencil-square"></i>
    </a>

</section>