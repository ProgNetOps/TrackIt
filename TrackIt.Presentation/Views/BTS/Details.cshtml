@model BTSDetailsViewModel

<section class="content-container">
    
    <article>
        <input asp-for="@Model.Id" hidden />

        <div class="form-group row m-2">
            <label asp-for="BTSName" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="BTSName" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="LocationAddress" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <textarea asp-for="LocationAddress" readonly class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group row m-2">
            <label asp-for="Coordinates" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Coordinates" class="form-control" readonly />
            </div>
        </div>


        <div class="form-group row m-2">

            <label asp-for="StateId" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="State" class="form-control" readonly value="@Model.State.StateName" />
            </div>
        </div>

        <div class="form-group row text-center m-5">
            <div class=" col-4 offset-4" style="position:relative;">
                <a class="shinyButton" asp-controller="BTS" asp-action="Index">Back&nbsp;To&nbsp;BTS</a>
            </div>
        </div>

        <hr class="m-4" />
    </article>
    
    @await Html.PartialAsync("_EditPartial", "BTS")

</section>