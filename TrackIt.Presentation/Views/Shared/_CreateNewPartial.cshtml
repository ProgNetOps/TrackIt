@* A view model with bootstrap attributes for modal pop up *@

@model string

@{
	// This value will be retrieved from the parent views and defaults to CREATE if it is null
	string actionName = ViewBag.ActionName == null ? "Create" : ViewBag.ActionName;
}


<a asp-controller="@Model" asp-action="@actionName" class="fixed-button">
	<i class="bi bi-plus"></i>
</a>