@model TrackIt.Domain.ViewModel.EditRoleViewModel


<section style="background-color: transparent;">
    <div class="glass-pane">
        <article class="bodyWrapper">

            <form method="post" asp-action="EditRole" style="background-color:#fff; padding:3vw; width:80%; border-radius:20px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row col-sm-8 offset-2 m-2">
                    <label asp-for="Id" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Id" class="form-control" disabled/>
                        <span asp-validation-for="Id" class="text-danger" />
                    </div>
                </div>
                
                <div class="form-group row  col-sm-8 col-sm-offset-2 m-2">
                    <label asp-for="RoleName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger" />
                    </div>
                </div>

                <div class="row">

                    <div class="form-group col-sm-6 text-center p-5">
                        <div class=" col-4 offset-4" style="position:relative;">
                            <button type="submit" class="shinyButton">Update Role</button>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 text-center p-5">
                        <div class=" col-4 offset-4" style="position:relative;">
                            <a asp-controller="Administration" asp-action="allroles" class="shinyButton">Back</a>
                        </div>
                    </div>
                </div>


                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Users in this role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach(var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer text-center p-5">
                        <div class=" col-4 offset-4" style="position:relative;">
                            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="shinyButton">Modify Users</a>
                        </div>
                    </div>
                </div>


            </form>

        </article>
    </div>
</section>



    

