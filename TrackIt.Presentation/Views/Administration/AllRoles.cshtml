@model IEnumerable<IdentityRole>

<section style="background-color: transparent;">

  <article class="bodyWrapper">

      <div class="clientCard-box">
         
         @if (!Model.Any())
            {
                <h2 class="text-center text-white">Nothing to display</h2>
            }
         else
         {
            foreach (var role in Model)
            {
                <div class="clientCard">
                    <div class="content">
                        <h3 style="color:#fff">@*client.Circuits.Count*@</h3>
                        <h4 style="color:#fff">@role.Name</h4>
                        <div>
                            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                                <button class="btn btn-danger" type="submit" 
                                onclick='return confirm("Are you sure you want to delete @role.Name role ?" )'>
                                    <i class="bi bi-trash3-fill"></i>
                                </button>                                   
                            </form>
                        </div>
                    </div>
                    <a style="position: absolute; top:10%; left:50%; transform:translateX(-50%);" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" class="fixed-button"> <i class="fas fa-pen" id="icon"></i> </a>
                                         
                </div> 
            }
         }
      </div>

  </article>

  @await Html.PartialAsync("_CreateNewPartial", "Administration")

</section>

